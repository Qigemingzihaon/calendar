/* pages/save.wxss */
.save_post{
  width: 100%;
  height:calc(100% - 200rpx);
  font-family: PingFang-SC-Medium;
  text-align: center;
}
.save_post .text{
  width:100%;
  margin:65rpx auto 46rpx auto;
  color:rgb(51,51,51);
  font-size:50rpx;
  font-weight:bolder;
}
.save_post .previewimg{
  margin: auto;
  /* width: 75%; */
  /* height: 700rpx; */
  width: 60%
}
.previewimg image{
  width: 100%;
  /* height: 100%; */
  height: 60vh
}
.save_post .msg{
  font-size:32rpx;
  color:rgb(153,153,153);
  margin-top: 18rpx;
  margin-bottom: 100rpx;
}
.save_url{
  width: 100%;
  height: 90rpx;
  background-color: rgb(90,90,90);
  color: rgb(255,255,255);
  position:fixed;
  bottom: 120rpx;
  display:flex;
  justify-content:center;
  font-family: PingFang-SC-Medium;
}
.save_url image{
  margin:14rpx 16rpx;
  width:60rpx;
  height: 60rpx;
}
.save_url view{
  width: calc(100% - 46px);
  text-align: left;
  font-size:32rpx;
  height:90rpx;
  line-height: 90rpx;
}
.save_url view button{
  height:90rpx;
  line-height: 90rpx;
  font-size:24rpx;
  background-color: rgb(90,90,90);
  color: rgb(255,255,255);
}
.save_btns{
  width: 100%;
  height: 120rpx;
  position:fixed;
  bottom: 0rpx;
  text-align:center;
  color: rgb(255,255,255);
  font-size:16px;
}
.save_btns .right{
  width:calc(50% - 1px);
  height:120rpx;
  background-color:rgb(235,189,116);
  margin-left:1px;
  font-size:30rpx;
  float:right;
  line-height: 120rpx;
}
.save_btns .left{
  width:calc(50% - 1px);
  height:120rpx;
  background-color:rgb(235,189,116);
  margin-right:1px;
  float:left;
  line-height: 120rpx;
  color: rgb(255,255,255);
}

.left .share{
  width:100%;
  height:100%;
  font-size:30rpx;
  background-color:rgb(235,189,116);
  line-height: 120rpx;
  color: rgb(255,255,255);
}
button::after {
  border: none
}
.plain {
  border: none;
  border-color: transparent;
}