/* pages/chs_calandar.wxss */
page,contianer{
  width: 100%;
  height: 100%;
}
.xz_list{
  height:calc(100% -106rpx - 120rpx);
  display:inline-block;
  width: 90%;
  margin: 1.2vh 5% 0;
}
.xz_item {
  margin: 0;
  margin-top: 2.8vh;
  /* height: calc(25%-56rpx); */
  width: 33.3%;
  float: left;
  text-align: center;
  color:rgb(51,51,51);
  font-family: PingFang-SC-Medium
}
.selected {
  background-color:rgb(227,175,93) !important;
}

.xz_logo{
   display:flex;
   justify-content:center;
   align-items:center;
   width: 110rpx;
   height: 110rpx;
   border: 1px solid;
   border-radius: 70rpx;
   background-color: rgb(186,186,186);
   margin:auto;
}
.xz_logo > image{
    width:55rpx;
    height:55rpx;
}

.xz_name {
  margin-top: 1.2vh; /*14rpx;*/
  font-size:28rpx;
  /* line-height: 40rpx; */
}

.xz_date{
  font-size: 18rpx; /*15px;*/
  padding-top: 0.2vh; /*6rpx;*/
  /* line-height:28rpx; */
}

.xz_sub_block{
  width: 100%;
  height: 88rpx;
  margin: auto;
  margin-top: 4vh;
  margin-bottom:4vh;
}

.xz_submit {
  background-color:rgb(235,189,116);
  color:#fff;
  font-size:32rpx;
  width:460rpx;
  border-radius:40rpx;
  height:106rpx;
  line-height:106rpx;
}