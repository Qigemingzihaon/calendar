.tamp_list .tp_img{
  width: 100%;
  /* height: 100%; */
  border-radius:6rpx;
  border: 1px solid rgba(0,0,0,0);
  box-sizing: border-box;
  -webkit-border-radius:6rpx;
  -moz-border-radius:6rpx;
  -ms-border-radius:6rpx;
  -o-border-radius:6rpx;
}
.tp_img_img{
  height: 320rpx;
}
.tamp_list .tp_img.selected{
  border:1px solid rgb(235,189,116);
  box-shadow:rgb(235,189,116) 0 0 10px 0;
}

.select_btn {
  position:relative;
  top:-70rpx;
  text-align:center;
}

.select_btn image{
  width:140rpx;
  height:140rpx;
}

.content_input input{
  font-size: 30rpx;
}
.center{
  position: relative;

}
.show{
  background-color: #fff;
}
.poster{
  width: 100%;
  height: 100%;
  border: 1rpx solid #000;
  position: absolute;
  /* display: none; */
  /* position: fixed; */
  top: 0;
  /* top: -1334px; */
  background-color: #fff;
  z-index:1;
}