/* pages/main.wxss */
.main{
  padding: 0;
}

.main_post{
  margin:58rpx 70rpx 4rpx 70rpx;
  /* background-color: #000; */
  height: calc(100% - 340rpx);
  width: calc(100% - 140rpx);
  position:absolute;
}
.planshow{
  width: 100%;
  margin:58rpx 0rpx 4rpx 0rpx;
}
.main_post image{
  height: 100%;
  width: 100%;
}


.main_btns{
  text-align: center;
  width: 100%;
  height:248rpx;
  position:fixed;
  bottom:0;
}

.main_btn {
  width:160rpx;
  height:160rpx;
  left:calc(50% - 80rpx);
  position:fixed;
  bottom:50rpx;
}

.mian_auth_btn {
  width:160rpx;
  height:160rpx;
  left:calc(50% - 80rpx);
  position:fixed;
  bottom:50rpx;
  padding:0;
  background-color:transparent;
  border:none;
  color:transparent;
}
.mian_auth_btn::after{ border: none; } 

.main_btn .btn_back {
  width:160rpx;
  height:160rpx;
  position:relative;
  left:0;
}
.save_btn {
  width:125rpx;
