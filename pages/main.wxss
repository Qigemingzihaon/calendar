  bottom:130rpx;
}

.reload_btn {
  width:120rpx;
  height:120rpx;
  left:160rpx;
  position:fixed;
  bottom:90rpx;
}

.edit_btn{
  width:120rpx;
  height:120rpx;
  right:160rpx;
