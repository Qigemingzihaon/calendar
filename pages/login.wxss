/* pages/login.wxss */
.content{
    position: relative;
    height: 100%;
    width: 100%;
}
.BG{
    width: 100%;
    height: 100%;
}
.loading{
    position: fixed;
    height: 100%;
    width: 100%;
    top: 0;
    background-color: #fff;
}
.xz_submit{
    width: 500rpx;
    position: absolute;
    border-radius: 50rpx;
    background-color: rgb(0,0,0);
    color: #fff;

    bottom: 10%;
    margin-left: -250rpx;
    left: 50%;
    -webkit-border-radius: 50rpx;
    -moz-border-radius: 50rpx;
    -ms-border-radius: 50rpx;
    -o-border-radius: 50rpx;
}